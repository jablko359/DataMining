<Application x:Class="AGDSPresentationDB.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AGDSPresentationDB"
             xmlns:tools="clr-namespace:AGDSPresentationDB.Tools"
             xmlns:viewModels="clr-namespace:AGDSPresentationDB.ViewModels"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <viewModels:MainViewModel x:Key="MainViewModel"/>
        <tools:IsSelectedToBackgroundConverter x:Key="BackgroundConverter"/>
        <tools:RelativeDepthToColorConverter x:Key="RelativeDepthToColorConverter"/>
        <tools:SearchOptToDepthVisibiliy x:Key="SearchOptToDepthVisibiliy"/>
        <tools:RelativeDepthToGraphNodeConverter x:Key="RelativeDepthToGraphNodeConverter"/>
        <tools:IsSearchExtendedToVisibilityConverter x:Key="SearchExtendedToVisibilityConverter"/>
        <tools:IsEnumSetToVisibilityConverter x:Key="IsEnumSetToVisibilityConverter"/>
        <tools:IsDbPrimaryKeyToVisibility x:Key="IsDbPrimaryKeyToVisibility"/>
    </Application.Resources>
</Application>
